<p id="notice"><%= notice %></p>

<h1>Stores Timings </h1>

<% if @stores.any? %>
  <table>
    <thead>
      <tr>
        <th>Store Name</th>
        <th>Monday Hours</th>
        <th>Tuesday Hours</th>
        <th>Wednesday Hours</th>
        <th>Thursday Hours</th>
        <th>Friday Hours</th>
        <th>Saturday Hours</th>
        <th>Sunday Hours</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= store.monday_hrs %></td>
          <td><%= store.tuesday_hrs %></td>
          <td><%= store.wednesday_hrs %></td>
          <td><%= store.thursday_hrs %></td>
          <td><%= store.friday_hrs %></td>
          <td><%= store.saturday_hrs %></td>
          <td><%= store.sunday_hrs %></td>
          <td><%= link_to 'Show', store %></td>
          <td><%= link_to 'Edit', edit_store_path(store) %></td>
          <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> No Store(s) Found . Please Add New Store. </p>
<% end %>

<br>

<strong><%= link_to 'Add Store', new_store_path %></strong>




